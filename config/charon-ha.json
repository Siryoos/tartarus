{
    "listen_addr": ":8000",
    "ferry": {
        "strategy": "least_conn",
        "session_affinity_key": "session",
        "crossing_timeout": "30s",
        "max_concurrent": 0,
        "circuit_breaker": {
            "enabled": true,
            "threshold": 3,
            "timeout": "30s",
            "half_open_requests": 5
        },
        "rate_limiting": {
            "enabled": true,
            "requests_per_second": 5000,
            "burst": 10000,
            "key_func": "tenant",
            "redis_addr": "redis:6379"
        },
        "retry": {
            "max_retries": 3,
            "initial_delay": "50ms",
            "max_delay": "1s",
            "retry_on": [
                502,
                503,
                504
            ]
        }
    },
    "shores": [],
    "_comment": "Shores are discovered dynamically from Hades registry using discovery service"
}